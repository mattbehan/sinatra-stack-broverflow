<a href="/questions/new">Ask Question</a>

<!-- Questions -->
<h1><%= @question.title %></h1>
<div class="questions">
  <!-- Stats -->
  <a href="/questions/<%= @question.id %>/votes/1" value = "1" class="upvote-button" id="<%=@question.id%>">Upvote</a>
  <p>
    <%= @question.sum_votes_for_question %>
  </p>
  <a href="/questions/<%= @question.id %>/votes/-1" value = "-1" class="downvote-button" id="<%=@question.id%>">Downvote</a>
  <!-- Question body -->
  <p> <%= @question.body %></p>
  <!-- Taggings -->

  <!-- Question author -->
  <a href="">
      <%= @question.find_display_name(@question.user_id) %>
  </a>
  <!-- Reputation -->
  <p>Reputation: <%=  @question.find_author_reputation(@question.user_id) %></p>
  <br>
  <!-- Add a comment -->
  <a href="#">add a comment</a>
</div>
<!-- Answers -->
<div class="container">
  <h4><%= @answers.length %> Answers</h4>
  <% @answers.each do |answer| %>
    <div class="answers">
      <!-- Stats -->
      <a href="/answers/<%= answer.id %>/votes/1" value = "1" class="upvote-button" id="<%=@question.id%>">Upvote</a>
      <p>
        <%= answer.sum_votes_for_answer %>
      </p>
      <a href="/answers/<%= answer.id %>/votes/-1" value = "-1" class="downvote-button" id="<%=@question.id%>">Downvote</a>
      <br>
      <!-- Best Answer -->
      <a href="">Choose as Best Answer</a>
      <!-- Text -->
      <h2> <%= answer.text %> </h2>
      <!-- Answer Author -->
      <a href="/users/"<%= @question.user_id %>>
          <%= answer.find_display_name(answer.user_id) %>
      </a>
      <!-- Reputation -->
      <p>Reputation: <%=  answer.find_author_reputation(answer.user_id) %></p>
      <br>
      <br>
      <!-- Add a comment -->
      <a href="#">add a comment</a>
      <br>
    </div>
  <% end %>
</div>
<!-- Submit Answers -->
<div class="container">
  <h2>Your Answer</h2>

  <form action="/questions/<%=@question.id%>/answers" method="post">
    <textarea name="answer-text" placeholder="text"></textarea>
    <br>
    <input id="submit-button" type="submit" value="Submit Answer">
  </form>
</div>
