<form class="new-comment-form" action="/<%=@commentable.class.name%>/<%=@commentable.id%>/comments" method="post">
  <% if @comment %>
  <%= erb :_errors, locals: {object: @comment} %>
  <% end %>
  <label for="comment">Enter your comment</label>
  <input id="comment"type="text" name="comment_text"/>

  <input type="submit" value="Submit"/>
</form>
